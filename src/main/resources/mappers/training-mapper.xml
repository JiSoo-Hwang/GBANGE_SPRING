UPDATE TRAINING SET STATUS = 'N'
WHERE TRAINING_NO = ?
</update>

<insert id="Reply">
INSERT INTO REPLY_TRAINING VALUES(SEQ_RNO.NEXTVAL,?,?,?,SYSDATE,DEFAULT)
</insert>

<select id="selectReplyList" parameterType="_int" resultMap="replyResultSet">
SELECT REPLY_NO
	,REPLY_CONTENT
    ,MEMBER_NAME
    ,CREATE_DATE
FROM REPLY_TRAINING R
JOIN MEMBER M ON(R.REPLY_WRITER = M.MEMBER_NO)
WHERE R.REF_TNO = ?
AND R.STATUS = 'Y' 
</select>

<update id="deleteReply" parameterType="_int">
UPDATE REPLY_TRAINING
SET STATUS = 'N'
WHERE REPLY_NO = ?
</update>

<update id="updateReply" parameterType="Reply">
UPDATE REPLY_TRAINING
SET REPLY_CONTENT = ?
WHERE REPLY_CONTENT = ?
AND REF_TNO = ?
AND REPLY_WRITER = ?
</update>

<update id="updateLikes">
UPDATE TRAINING
SET LIKES = LIKES +1
WHERE TRAINING_NO = ?
</update>

<select id="selectLikes">
SELECT LIKES
FROM TRAINING
WHERE TRAINING_NO = ?
</select>

<select id="selectShoesList" resultMap="">
SELECT SHOES_NO,SHOES_NAME,STATUS
FROM SHOES
</select>

<select id="select" resultMap="">
SELECT SHOES_NO,SHOES_NAME
FROM SHOES
RIGHT JOIN TRAINING USING(SHOES_NO)
WHERE TRAINING_NO = ?
</select>

<select id="searchByTitle" resultMap="trainingResultSet">
SELECT * FROM (
SELECT ROWNUM RNUM, S.* 
FROM(SELECT TRAINING_NO,TRAINING_TITLE,MEMBER_NAME,RECORD_DATE,COUNT,OCSTATUS
FROM TRAINING T
JOIN MEMBER M USING(MEMBER_NO)
WHERE T.STATUS = 'Y'
AND TRAINING_TITLE LIKE ?
ORDER BY RECORD_DATE DESC)S)
WHERE RNUM BETWEEN ? AND ?
</select>

<select id="searchByCategory" resultMap="trainingResultSet">
