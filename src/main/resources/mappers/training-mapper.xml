JOIN MEMBER M ON(T.MEMBER_NO=M.MEMBER_NO)
JOIN TRAINING_CATEGORY TC ON(T.TRAINING_KEY = TC.TRAINING_KEY)
WHERE T.STATUS = 'Y'
AND TC.TRAINING_NAME LIKE ?
ORDER BY RECORD_DATE DESC)S)
WHERE RNUM BETWEEN ? AND ?
</select>

