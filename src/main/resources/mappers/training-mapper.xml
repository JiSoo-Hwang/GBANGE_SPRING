<update id="increaseCount" parameterType="_int">
UPDATE TRAINING
SET COUNT = COUNT +1
WHERE TRAINING_NO = #{trainingNo}
AND STATUS = 'Y'
</update> 

<select id="listCount" resultType="_int">
SELECT COUNT(*) COUNT
FROM TRAINING
WHERE STATUS = 'Y'
</select>

<select id="selectList" resultMap="trainingResultSet">
SELECT TRAINING_NO,TRAINING_TITLE,MEMBER_NAME,RECORD_DATE,COUNT,OCSTATUS
FROM TRAINING T
JOIN MEMBER M USING(MEMBER_NO)
WHERE T.STATUS = 'Y'
ORDER BY RECORD_DATE DESC
</select>

