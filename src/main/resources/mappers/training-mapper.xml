<select id="selectTraining" resultMap="trainingResultSet">
SELECT 
	TRAINING_NO,
	MEMBER_NAME,
	TRAINING_TITLE, 
	COUNT,
	TRAINING_NAME,
	SHOES_NO,
	TRAINING_DATE,
	RECORD_DATE,
	TRAINING_PLACE,
	TRAINING_TIME,
	TRAINING_GOAL,
	TRAINING_DISTANCE,
	T.WEIGHT WEIGHT,
	TRAINING_CONTENT,
	OCSTATUS
FROM TRAINING T
JOIN MEMBER M USING(MEMBER_NO) 
JOIN TRAINING_CATEGORY TC ON (T.TRAINING_KEY = TC.TRAINING_KEY)
WHERE TRAINING_NO = #{trainingNo}
AND T.STATUS = 'Y'
</select>
